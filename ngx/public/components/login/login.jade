md-content.page.page-login(layout="row", layout-align="center center")

    md-card(flex="40", flex-sm="80")
        md-card-content

            h2 Sample login form

            form(name="loginForm", ng-submit="doLogIn(credentials)")
                md-input-container
                    label Username
                    input(name="username", ng-model="credentials.username", placeholder="Please enter your username")
                md-input-container
                    label Password
                    input(type="password", name="password", ng-model="credentials.password", placeholder="Please enter your password")

                md-progress-linear(ng-show="isBusy", md-mode="indeterminate")

                div(layout="row", layout-sm="column")
                    md-button.md-raised.md-primary(ng-disabled="isBusy")
                        span(ng-hide="isBusy") Log in
                        span(ng-show="isBusy") Please wait 2 seconds...

